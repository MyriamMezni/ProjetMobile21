<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/Bienvenue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="14dp"
        android:layout_weight="0"
        android:gravity="center"
        android:text="  Bienvenue"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="348dp"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="414dp"
        android:src="@drawable/pngtreeearth_travel_abroad_travel_tourism_3943357"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="109dp" />

    <TextView
        android:id="@+id/ChoisirVotreDestination"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="306dp"
        android:layout_weight="0"
        android:gravity="center"
        android:text="choisir votre destination"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/FranceBT"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="84dp"
        android:layout_marginTop="345dp"
        android:src="@drawable/_75736530_173117998018256_282829892821379936_n"
        android:text="France"
        tools:ignore="DuplicateIds" />


    <ImageView
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FranceBT"
        android:layout_alignStart="@+id/ItalieBT"
        android:layout_alignEnd="@+id/ItalieBT"
        android:layout_alignBottom="@+id/ItalieBT"
        android:layout_marginStart="-56dp"
        android:layout_marginTop="-43dp"
        android:layout_marginEnd="248dp"
        android:layout_marginBottom="67dp"
        android:src="@drawable/flag_france">

    </ImageView>

    <Button
        android:id="@+id/ItalieBT"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="86dp"
        android:layout_marginTop="404dp"
        android:src="@drawable/_75736530_173117998018256_282829892821379936_n"
        android:text="Italie"
        tools:ignore="DuplicateIds" />

    <ImageView
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FranceBT"
        android:layout_alignStart="@+id/ItalieBT"
        android:layout_alignEnd="@+id/ItalieBT"
        android:layout_alignBottom="@+id/ItalieBT"
        android:layout_marginStart="-51dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="243dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/flag_italy">

    </ImageView>

    <Button
        android:id="@+id/TurquieBT"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="86dp"
        android:layout_marginTop="463dp"
        android:src="@drawable/_75736530_173117998018256_282829892821379936_n"
        android:text="Turquie"
        tools:ignore="DuplicateIds" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ItalieBT"
        android:layout_alignStart="@+id/TurquieBT"
        android:layout_marginStart="-51dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/flag_turkey">

    </ImageView>

    <Button
        android:id="@+id/EspagneBT"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="86dp"
        android:layout_marginTop="517dp"
        android:src="@drawable/_75736530_173117998018256_282829892821379936_n"
        android:text="Espagne"
        tools:ignore="DuplicateIds" />

    <Button
        android:id="@+id/TunisieBT"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="86dp"
        android:layout_marginTop="567dp"
        android:src="@drawable/_75736530_173117998018256_282829892821379936_n"
        android:text="Tunisie"
        tools:ignore="DuplicateIds" />

    <ImageView
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TurquieBT"
        android:layout_alignStart="@+id/EspagneBT"
        android:layout_alignEnd="@+id/EspagneBT"
        android:layout_alignBottom="@+id/TurquieBT"
        android:layout_marginStart="-47dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="237dp"
        android:layout_marginBottom="-37dp"
        android:src="@drawable/flag_spain">

    </ImageView>

    <Button
        android:id="@+id/AngleterreBT"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="86dp"
        android:layout_marginTop="628dp"
        android:src="@drawable/_75736530_173117998018256_282829892821379936_n"
        android:text="Angleterre"
        tools:ignore="DuplicateIds" />

    <ImageView
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:layout_below="@+id/TunisieBT"
        android:layout_alignStart="@+id/AngleterreBT"
        android:layout_alignEnd="@+id/AngleterreBT"
        android:layout_marginStart="-45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="237dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/flag_united_kingdom">

    </ImageView>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EspagneBT"
        android:layout_alignStart="@+id/TunisieBT"
        android:layout_alignEnd="@+id/TunisieBT"
        android:layout_alignBottom="@+id/EspagneBT"
        android:layout_marginStart="-44dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="239dp"
        android:layout_marginBottom="-39dp"
        android:src="@drawable/flag_tunisia">

    </ImageView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:menu="@menu/bottom_menu" />

    <TextView
        android:id="@+id/nomtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="706dp"
        android:text="TextView" />


</RelativeLayout>